{
  "name": "OntoClick",
  "description": "Turn your clinical description into a proper ontology term",
  "version": "0.0.1",
  "background": {
    "scripts": ["static/js/background.js"]
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "static/img/rdf_flyer.png",
    "128": "static/img/rdf_flyer.png"
  },
  "browser_action": {
    "default_title": "Ontoclick",
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    "index.html",
    "static/js/app.js",
    "static/js/app.js.map",
    "static/js/vendor.js",
    "static/js/vendor.js.map",
    "static/css/app.css",
    "static/css/app.css.map"
  ],
  "permissions": [
    "contextMenus",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "http://data.bioontology.org/*",
    "https://data.bioontology.org/*",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "css": [
      "static/css/loader.css",
      "static/css/loader.css.map"
    ]
  }],
  "content_security_policy": "script-src 'self' https://use.fontawesome.com/releases/v5.14.0/js/all.js; object-src 'self'"
}
